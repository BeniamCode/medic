<!DOCTYPE html>
<html lang="el" data-theme="bumblebee">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title suffix=" Â· Medic">
      <%= assigns[:page_title] || "Medic" %>
    </.live_title>
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <link href="https://api.mapbox.com/mapbox-gl-js/v3.17.0-beta.1/mapbox-gl.css" rel="stylesheet" />
    <script src="https://api.mapbox.com/mapbox-gl-js/v3.17.0-beta.1/mapbox-gl.js"></script>
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      (() => {
        const defaultTheme = "bumblebee";
        const darkTheme = "night";
        const setTheme = (theme) => {
          const applied = theme === "system" ? defaultTheme : (theme || defaultTheme);

          if (theme === "system") {
            localStorage.removeItem("phx:theme");
          } else if (theme) {
            localStorage.setItem("phx:theme", theme);
          } else {
            localStorage.setItem("phx:theme", applied);
          }

          document.documentElement.setAttribute("data-theme", applied);
          window.dispatchEvent(new CustomEvent("phx:theme-changed", { detail: { theme: applied } }));
        };

        if (!document.documentElement.hasAttribute("data-theme")) {
          setTheme(localStorage.getItem("phx:theme") || defaultTheme);
        } else {
          const stored = localStorage.getItem("phx:theme");
          document.documentElement.setAttribute("data-theme", stored || defaultTheme);
          window.dispatchEvent(new CustomEvent("phx:theme-changed", { detail: { theme: stored || defaultTheme } }));
        }

        window.addEventListener("storage", (e) => {
          if (e.key === "phx:theme") setTheme(e.newValue || defaultTheme);
        });
        
        window.addEventListener("phx:set-theme", (e) => {
          const requested = e.detail && e.detail.theme;

          if (requested === "toggle") {
            const current = document.documentElement.getAttribute("data-theme");
            const next = current === darkTheme ? defaultTheme : darkTheme;
            setTheme(next);
          } else if (requested) {
            setTheme(requested);
          } else {
            setTheme(defaultTheme);
          }
        });
      })();
    </script>
  </head>
  <body>
    <%= @inner_content %>
  </body>
</html>
