# Production Environment Variables Template
# Copy this to /opt/medic/.env on production server and fill in real values

# Database Configuration
DATABASE_URL=postgresql://medic:CHANGE_THIS_PASSWORD@localhost/medic
POOL_SIZE=20

# Phoenix Configuration
PHX_SERVER=true
PHX_HOST=medic.gr
PORT=4000
SECRET_KEY_BASE=GENERATE_WITH_mix_phx_gen_secret

# Email Configuration (Gmail SMTP)
HI_USERNAME=hi@medic.gr
GMAIL_SMTP_APP=your_app_password_here
APPOINTMENTS_SMTP_APP=your_appointments_app_password_here

# Backblaze B2 Storage (if using)
B2_KEY_ID=your_b2_key_id
B2_APPLICATION_KEY=your_b2_app_key
B2_BUCKET_ID=your_bucket_id
B2_BUCKET_NAME=your_bucket_name

# Typesense Configuration
TYPESENSE_HOST=localhost
TYPESENSE_PORT=8108
TYPESENSE_API_KEY=GENERATE_RANDOM_KEY
TYPESENSE_PROTOCOL=http

# Other Configuration
MIX_ENV=prod
